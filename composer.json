{
  "name": "graylog2/gelf-php",
  "description": "A php implementation to send log-messages to a GELF compatible backend like Graylog2.",
  "license": "MIT",
  "authors": [
    {
      "name": "Benjamin Zikarsky",
      "email": "benjamin@zikarsky.de"
    },
    {
      "name": "gelf-php contributors",
      "homepage": "https://github.com/bzikarsky/gelf-php/contributors"
    }
  ],
  "autoload": {
    "psr-4": {
      "Gelf\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Gelf\\Test\\": "tests"
    }
  },
  "require": {
    "php": "^7.2",
    "ext-json": "*",
    "psr/log": "~1.0"
  },
  "suggest": {
    "ext-amqp": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3",
    "friendsofphp/php-cs-fixer": "^2.13",
    "roave/security-advisories": "dev-master"
  },
  "provide": {
    "psr/log-implementation": "~1.0"
  },
  "suggest": {
    "ext-amqp": "*"
  },
  "scripts": {
    "code-style-check": "vendor/bin/php-cs-fixer fix --dry-run --diff --verbose",
    "code-style-check-additional": "vendor/bin/phpcs --standard=PSR2 src tests examples",
    "code-style-fix": "vendor/bin/php-cs-fixer fix"
  }
}
